<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#65FFFFFF</item>
        <item name="colorControlActivated">#FFFFFFFF</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/music_type_text_size</item>
    </style>

    <style name="anim_menu_buy">
        <item name="android:windowEnterAnimation">@anim/menu_buy_in</item>
        <item name="android:windowExitAnimation">@anim/menu_buy_out</item>
    </style>

    <!--photo picker-->
    <style name="inoutformbottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_entry_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_leave_from_bottom</item>
    </style>

</resources>
