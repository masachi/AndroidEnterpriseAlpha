<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ReleaseFeedBack">

    <RelativeLayout
            android:id="@+id/release_feed_back_top"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/student_feed_back_height">
        <ImageButton
                android:id="@+id/instrument_info_back1"
                android:src="@mipmap/ic_return"
                android:background="@color/transparent_white"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        <TextView
                android:text="@string/release_feed_back"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/release"
                android:text="@string/release"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:id="@+id/select_course_time"
                android:background="@drawable/release_feed_back"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="@string/select_course_time"
                android:textSize="16sp"
                android:textColor="@color/black_course_time"/>
        <EditText
                android:id="@+id/please_input_thought"
                android:background="@drawable/release_feed_back"
                android:layout_below="@id/select_course_time"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_width="match_parent"
                android:layout_height="95sp"
                android:text="@string/please_input_thought"
                android:textSize="16sp"
                android:textColor="@color/black_course_time"/>


    </RelativeLayout>

</LinearLayout>