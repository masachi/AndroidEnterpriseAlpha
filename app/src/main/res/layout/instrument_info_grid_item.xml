<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_gv_padding"
                android:paddingBottom="@dimen/item_gv_padding_bottom"
                android:paddingRight="@dimen/item_gv_padding"
                android:paddingLeft="@dimen/item_gv_padding">

    <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/music_lv_img_width"
            android:layout_height="@dimen/music_lv_img_height"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="2333333"
            android:textColor="@color/item_music_title_color"
            android:textSize="@dimen/item_music_title_size"/>

    <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="$233"
            android:textColor="@color/item_music_price_color"
            android:textSize="@dimen/item_music_price_size"/>

    <TextView
            android:id="@+id/item_price_with_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_price"
            android:layout_marginStart="7dp"
            android:layout_alignBaseline="@id/item_price"
            android:text="233"
            android:textColor="@color/item_music_price_with_line_color"
            android:textSize="@dimen/item_music_price_with_line_size"/>
</RelativeLayout>