<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <org.example.androidenterprise.view.CircleImageView
            android:id="@+id/civ_student_head_img"
            android:layout_width="@dimen/head_img_width_height"
            android:layout_height="@dimen/head_img_width_height"
            android:src="@drawable/img_example2"
    />
    <TextView
            android:id="@+id/tv_student_head_name"
            android:layout_marginTop="@dimen/head_name_margin"
            android:textSize="@dimen/student_name_text_size"
            android:textColor="@color/color_666666"
            android:text="@string/student_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>