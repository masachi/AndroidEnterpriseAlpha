<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        tools:context="org.example.androidenterprise.activity.OrderActivity">

    <RelativeLayout
            android:id="@+id/order_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="#FF97C8CD">
        <ImageButton
                android:id="@+id/order_return_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_return"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/action_bar_image_margin_end"
                android:background="@color/transparent"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_bar_order"
                android:textSize="@dimen/action_bar_text_size"
                android:textColor="@color/text_color"
                android:layout_centerInParent="true"/>

        <ImageButton
                android:id="@+id/order_search_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_search"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/action_bar_image_margin_end"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

    </RelativeLayout>

    <org.example.androidenterprise.view.CustomMeasureListView
            android:id="@+id/order_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/order_lv_margin_top"
            android:layout_below="@id/order_title">

    </org.example.androidenterprise.view.CustomMeasureListView>

</RelativeLayout>
