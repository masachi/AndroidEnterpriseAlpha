<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.StudentFeedBack">

    <RelativeLayout
            android:id="@+id/student_feed_back_top"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/student_feed_back_height">
        <ImageButton
                android:id="@+id/instrument_info_back1"
                android:src="@mipmap/ic_return"
                android:background="@color/transparent_white"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        <TextView
                android:text="@string/students_feed_back"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


    <org.example.androidenterprise.view.CustomScrollView
            android:layout_below="@id/instrument_info_top"
            android:background="@color/grey_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/student_feed_back_second"
                    android:background="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/student_feed_back_height">

                <ImageButton
                        android:id="@+id/instrument_info_back2"
                        android:src="@drawable/ic_left"
                        android:background="@color/transparent_white"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                <TextView
                        android:text="@string/students_feed_back_time"
                        android:textColor="@color/black_course_time"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageButton
                        android:id="@+id/instrument_info_"
                        android:src="@drawable/ic_right"
                        android:background="@color/transparent_white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/student_feed_back_third"
                    android:layout_below="@id/student_feed_back_second"
                    android:layout_marginTop="10dp"
                    android:background="@color/while_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <org.example.androidenterprise.view.CircleImageView
                        android:id="@+id/mine_image"
                        android:layout_width="@dimen/mine_image_side"
                        android:layout_height="@dimen/mine_image_side"
                        android:src="@color/grey"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/mine_image_padding"/>
                <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </ListView>


            </RelativeLayout>
        </RelativeLayout>
    </org.example.androidenterprise.view.CustomScrollView>
</LinearLayout>
