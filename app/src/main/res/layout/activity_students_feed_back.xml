<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.StudentsFeedBackActivity">

    <org.example.androidenterprise.view.TopbarView
            android:id="@+id/topbar_student_feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/rl_second"
                    android:background="@color/color_ffffff"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/student_feed_back_height">
                <ImageButton
                        android:id="@+id/ib_instrument_info_back2"
                        android:src="@drawable/ic_left"
                        android:background="@color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                <TextView
                        android:id="@+id/tv_class_time"
                        android:text="@string/students_feed_back_time"
                        android:textColor="@color/color_666666"
                        android:layout_centerInParent="true"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageButton
                        android:id="@+id/ib_instrument_info_next"
                        android:src="@drawable/ic_right"
                        android:background="@color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_third"
                    android:layout_below="@id/rl_second"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ListView
                        android:id="@+id/lv_th"
                        android:background="@color/color_ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/color_dddddd"
                        android:dividerHeight="10dp">
                </ListView>
            </RelativeLayout>

        </RelativeLayout>
</LinearLayout>
