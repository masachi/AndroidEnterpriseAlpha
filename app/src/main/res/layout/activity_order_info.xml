<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.example.androidenterprise.activity.OrderInfoActivity">

    <RelativeLayout
            android:id="@+id/order_info_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="#FF97C8CD">
        <ImageButton
                android:id="@+id/order_info_return_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_return"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/action_bar_image_margin_end"
                android:background="@color/transparent"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_bar_order_info"
                android:textSize="@dimen/action_bar_text_size"
                android:textColor="@color/color_ffffff"
                android:layout_centerInParent="true"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/order_info_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_info_top_height"
            android:layout_below="@id/order_info_title"
            android:background="#FF97C8CD">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="@dimen/order_info_top_pay_size"
                android:textColor="@color/color_ffffff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/order_info_margin_left_right"/>

        <Button
                android:id="@+id/order_info_pay_btn"
                android:layout_width="@dimen/order_info_top_btn_width"
                android:layout_height="@dimen/order_info_top_btn_height"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_login"
                style="?android:borderlessButtonStyle"
                android:layout_marginEnd="@dimen/order_info_margin_left_right"
                android:layout_centerVertical="true"
                android:text="付款"
                android:textSize="@dimen/order_info_top_btn_text_size"
                android:textColor="@color/color_ffffff"/>

    </RelativeLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_d1d1d1"/>
    <org.example.androidenterprise.view.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/order_info_logistics_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logistics_car"
                        android:layout_marginLeft="@dimen/order_info_margin_left_right"
                        android:layout_marginTop="@dimen/order_info_logistics_maigin_top_end"
                        android:layout_marginBottom="@dimen/order_info_logistics_maigin_top_end"/>

                <TextView
                        android:id="@+id/order_info_logistics_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_info_margin_left_right"
                        android:layout_toRightOf="@id/order_info_logistics_img"
                        android:layout_marginTop="@dimen/order_info_logistics_maigin_top_end"
                        android:layout_marginBottom="@dimen/order_info_logistics_maigin_top_end"
                        android:text="233333333"
                        android:textSize="@dimen/order_info_logistics_text_size"
                        android:layout_alignBaseline="@id/order_info_logistics_img"
                        android:textColor="@color/color_999999"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/order_info_logistics_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <RelativeLayout
                    android:id="@+id/order_info_personality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/order_info_pos_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_order_position"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/order_info_margin_left_right"/>

                <TextView
                        android:id="@+id/order_info_personality_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/order_info_personality_text_size"
                        android:layout_marginTop="@dimen/order_info_personality_margin_top_end"
                        android:text="233333333"
                        android:layout_toRightOf="@id/order_info_pos_img"
                        android:layout_marginLeft="@dimen/order_info_margin_left_right"/>

                <TextView
                        android:id="@+id/order_info_personality_pos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/order_info_personality_text_size"
                        android:layout_marginTop="@dimen/order_info_personality_margin_each"
                        android:layout_below="@id/order_info_personality_name"
                        android:text="23333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333"
                        android:layout_toRightOf="@id/order_info_pos_img"
                        android:layout_marginLeft="@dimen/order_info_margin_left_right"/>


            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_info_between_each_grey_height"
                    android:background="@color/color_f0f0f0"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <org.example.androidenterprise.view.CustomMeasureListView
                    android:id="@+id/order_info_order_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="15dp"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginRight="@dimen/order_info_margin_left_right">

            </org.example.androidenterprise.view.CustomMeasureListView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginRight="@dimen/order_info_margin_left_right"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginTop="@dimen/order_info_delivery_price_margin_top_end"
                    android:layout_marginRight="@dimen/order_info_margin_left_right"
                    android:layout_marginBottom="@dimen/order_info_delivery_price_margin_top_end">
                <TextView
                        android:id="@+id/order_info_delivery_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textSize="@dimen/order_info_delivery_price_text_size"/>

                <TextView
                        android:id="@+id/order_info_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="￥233"
                        android:textSize="@dimen/order_info_delivery_price_text_size"/>

                <TextView
                        android:id="@+id/order_info_delivery_final_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_delivery_price_text"
                        android:layout_marginTop="@dimen/order_info_delivery_price_margin_each"
                        android:text="实付（含运费）"
                        android:textSize="@dimen/order_info_delivery_price_text_size"/>

                <TextView
                        android:id="@+id/order_info_delivery_final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/order_info_delivery_price"
                        android:layout_marginTop="@dimen/order_info_delivery_price_margin_each"
                        android:text="￥2333"
                        android:textSize="@dimen/order_info_delivery_final_price_size"
                        android:textColor="@color/color_f49c14"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginRight="@dimen/order_info_margin_left_right"/>

            <TextView
                    android:id="@+id/order_info_delivery_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginTop="@dimen/order_info_delivery_price_margin_top_end"
                    android:layout_marginRight="@dimen/order_info_margin_left_right"
                    android:layout_marginBottom="@dimen/order_info_delivery_price_margin_top_end"
                    android:text="买家留言：233333333333333333333333333333333333333333333333333333333333333333333333"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_info_between_each_grey_height"
                    android:background="@color/color_f0f0f0"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_info_margin_top_end"
                    android:layout_marginBottom="@dimen/order_info_margin_top_end"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginRight="@dimen/order_info_margin_left_right">

                <TextView
                        android:id="@+id/order_info_order_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号：233"
                        android:textSize="@dimen/order_info_order_text_size"
                        android:textColor="@color/color_999999"/>

                <TextView
                        android:id="@+id/order_info_order_create_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_order_number_tv"
                        android:layout_marginTop="@dimen/order_info_order_margin_each"
                        android:text="创建时间："
                        android:textSize="@dimen/order_info_order_text_size"
                        android:textColor="@color/color_999999"/>

                <TextView
                        android:id="@+id/order_info_order_pay_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_order_create_time_tv"
                        android:layout_marginTop="@dimen/order_info_order_margin_each"
                        android:text="付款时间："
                        android:textSize="@dimen/order_info_order_text_size"
                        android:textColor="@color/color_999999"/>

                <TextView
                        android:id="@+id/order_info_order_deliver_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_order_pay_time_tv"
                        android:layout_marginTop="@dimen/order_info_order_margin_each"
                        android:text="发货时间："
                        android:textSize="@dimen/order_info_order_text_size"
                        android:textColor="@color/color_999999"/>

                <TextView
                        android:id="@+id/order_info_order_catch_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_order_deliver_time_tv"
                        android:layout_marginTop="@dimen/order_info_order_margin_each"
                        android:text="收货时间："
                        android:textSize="@dimen/order_info_order_text_size"
                        android:textColor="@color/color_999999"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_info_between_each_grey_height"
                    android:background="@color/color_f0f0f0"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:id="@+id/order_info_return_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_info_margin_top_end"
                    android:layout_marginBottom="@dimen/order_info_margin_top_end"
                    android:layout_marginLeft="@dimen/order_info_margin_left_right"
                    android:layout_marginRight="@dimen/order_info_margin_left_right"
                    android:text="退货地址：233333333333333333333333333333333333333333333333333333333333333333333333"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_info_between_each_grey_height"
                    android:background="@color/color_f0f0f0"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <FrameLayout
                    android:id="@+id/order_info_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                <RelativeLayout
                        android:id="@+id/order_info_action_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                    <Button
                            android:id="@+id/order_info_action_pay_cancel"
                            android:layout_width="@dimen/order_info_action_btn_width"
                            android:layout_height="@dimen/order_info_action_btn_height"
                            android:textSize="@dimen/order_info_action_btn_text_size"
                            android:textColor="@color/color_999999"
                            android:gravity="center"
                            style="?android:borderlessButtonStyle"
                            android:background="@drawable/order_info_action_btn"
                            android:text="取消订单"/>

                    <Button
                            android:id="@+id/order_info_action_pay_yes"
                            android:layout_width="@dimen/order_info_action_btn_width"
                            android:layout_height="@dimen/order_info_action_btn_height"
                            android:textSize="@dimen/order_info_action_btn_text_size"
                            android:textColor="@color/color_999999"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            style="?android:borderlessButtonStyle"
                            android:background="@drawable/order_info_action_btn_pay"
                            android:text="付款"/>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/order_info_action_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">

                    <Button
                            android:id="@+id/order_info_action_cancel_cancel"
                            android:layout_width="@dimen/order_info_action_btn_width"
                            android:layout_height="@dimen/order_info_action_btn_height"
                            android:textSize="@dimen/order_info_action_btn_text_size"
                            android:textColor="@color/color_999999"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            style="?android:borderlessButtonStyle"
                            android:background="@drawable/order_info_action_btn"
                            android:text="取消订单"/>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/order_info_action_catch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">

                    <Button
                            android:id="@+id/order_info_action_catch_cancel"
                            android:layout_width="@dimen/order_info_action_btn_width"
                            android:layout_height="@dimen/order_info_action_btn_height"
                            android:textSize="@dimen/order_info_action_btn_text_size"
                            android:textColor="@color/color_999999"
                            android:gravity="center"
                            style="?android:borderlessButtonStyle"
                            android:background="@drawable/order_info_action_btn"
                            android:text="退货"/>

                    <Button
                            android:id="@+id/order_info_action_catch_yes"
                            android:layout_width="@dimen/order_info_action_btn_width"
                            android:layout_height="@dimen/order_info_action_btn_height"
                            android:textSize="@dimen/order_info_action_btn_text_size"
                            android:textColor="@color/color_999999"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            style="?android:borderlessButtonStyle"
                            android:background="@drawable/order_info_action_btn_pay"
                            android:text="确认收货"/>

                </RelativeLayout>

            </FrameLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_info_between_each_grey_height"
                    android:background="@color/color_f0f0f0"
                    android:visibility="invisible"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d1d1d1"
                    android:visibility="invisible"/>


        </LinearLayout>

    </org.example.androidenterprise.view.CustomScrollView>

</LinearLayout>
