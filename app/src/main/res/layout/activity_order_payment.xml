<?xml version="1.0" encoding="utf-8"?>

<!--Created by byyoung1：订单支付界面的布局文件-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <org.example.androidenterprise.view.TopbarView
            android:id="@+id/topbar_order_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_courseInfo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:layout_marginLeft="@dimen/order_payment_pay_margin"
                android:layout_marginTop="@dimen/order_payment_btn_height"
                android:text="@string/activity_orderpayment_courseInfo_title_str"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/order_payment_text_size"/>
        <TextView
                android:id="@+id/tv_courseInfo"
                android:layout_marginLeft="@dimen/order_payment_tv_tv"
                android:layout_alignTop="@id/tv_courseInfo_title"
                android:layout_toRightOf="@id/tv_courseInfo_title"
                android:text="课程XXXX"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="@color/color_d1d1d1"
                android:layout_below="@id/tv_courseInfo_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>

        <TextView
                android:id="@+id/tv_accout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@id/tv_courseInfo_title"
                android:layout_marginTop="@dimen/order_payment_margin_many"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:text="@string/activity_orderpayment_account_title_str"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/order_payment_text_size"/>
        <TextView
                android:id="@+id/tv_accout"
                android:layout_toRightOf="@id/tv_accout_title"
                android:layout_alignTop="@id/tv_accout_title"
                android:layout_marginLeft="@dimen/order_payment_tv_tv"
                android:text="Abc"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_below="@id/tv_accout_title"
                android:background="@color/color_d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>

        <TextView
                android:id="@+id/tv_Attn_title"
                android:layout_marginTop="@dimen/order_payment_margin_many"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:layout_alignRight="@id/tv_courseInfo_title"
                android:layout_below="@id/tv_courseInfo_title"
                android:text="@string/activity_orderpayment_Attn_title_str"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/order_payment_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_Attn"
                android:layout_toRightOf="@id/tv_Attn_title"
                android:layout_alignTop="@id/tv_Attn_title"
                android:layout_marginLeft="@dimen/order_payment_tv_tv"
                android:text="学员XXX"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_Attn_phoneNumber"
                android:layout_toRightOf="@id/tv_Attn"
                android:layout_alignTop="@id/tv_Attn"
                android:layout_marginLeft="@dimen/order_payment_nametv_phonenumtv"
                android:text="13567899876"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_below="@id/tv_Attn_title"
                android:background="@color/color_d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>

        <TextView
                android:id="@+id/tv_OrderNo_title"
                android:layout_below="@id/tv_Attn_title"
                android:layout_alignRight="@id/tv_Attn_title"
                android:layout_marginTop="@dimen/order_payment_margin_many"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:text="@string/activity_orderpayment_OrderNo_title_str"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_OrderNo"
                android:layout_toRightOf="@id/tv_OrderNo_title"
                android:layout_alignTop="@id/tv_OrderNo_title"
                android:layout_marginLeft="@dimen/order_payment_tv_tv"
                android:text="7654321"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_below="@id/tv_OrderNo_title"
                android:background="@color/color_d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>

        <TextView
                android:id="@+id/tv_sum_title"
                android:layout_below="@id/tv_OrderNo_title"
                android:layout_alignRight="@id/tv_OrderNo_title"
                android:layout_marginTop="@dimen/order_payment_margin_many"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:text="@string/activity_orderpayment_sum_title_str"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_sum"
                android:layout_toRightOf="@id/tv_sum_title"
                android:layout_alignTop="@id/tv_sum_title"
                android:layout_marginLeft="@dimen/order_payment_tv_tv"
                android:text="5000.0元"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_below="@id/tv_sum_title"
                android:background="@color/color_d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>

        <TextView
                android:id="@+id/tv_payment_title"
                android:layout_below="@id/tv_sum_title"
                android:layout_alignRight="@id/tv_sum_title"
                android:layout_marginTop="@dimen/order_payment_margin_many"
                android:layout_marginBottom="@dimen/order_payment_margin_many"
                android:text="@string/activity_orderpayment_payment_title_str"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginBottom="@dimen/order_payment_pay_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_alipay_title"
                android:background="@drawable/order_payment_tv_border"
                android:drawableLeft="@mipmap/ic_paytype_zhifubao"
                android:drawablePadding="@dimen/order_payment_pay_margin"
                android:gravity="center_vertical"
                android:text="@string/activity_orderpayment_alipay_title_str"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_666666"
                android:paddingLeft="@dimen/order_payment_pay_margin"
                android:layout_marginLeft="@dimen/order_payment_pay_margin"
                android:layout_marginRight="@dimen/order_payment_pay_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_pay_tv_height"/>
        <ImageView
                android:id="@+id/iv_selected_alipay"
                android:layout_alignRight="@id/tv_alipay_title"
                android:layout_marginRight="@dimen/order_payment_pay_margin"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_payment_check_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginBottom="@dimen/order_payment_pay_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_wechatpay_title"
                android:background="@drawable/order_payment_tv_border"
                android:drawableLeft="@mipmap/ic_paytype_weixin"
                android:drawablePadding="@dimen/order_payment_pay_margin"
                android:gravity="center_vertical"
                android:text="@string/activity_orderpayment_wechatpay_title_str"
                android:textSize="@dimen/order_payment_text_size"
                android:textColor="@color/color_666666"
                android:paddingLeft="@dimen/order_payment_pay_margin"
                android:layout_marginLeft="@dimen/order_payment_pay_margin"
                android:layout_marginRight="@dimen/order_payment_pay_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_pay_tv_height"/>
        <ImageView
                android:id="@+id/iv_wechatpay_selected"
                android:layout_alignRight="@id/tv_wechatpay_title"
                android:layout_marginRight="@dimen/order_payment_pay_margin"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_payment_check_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:id="@+id/btn_payment"
                android:background="@color/color_ffffff"
                android:text="@string/activity_orderpayment_payment_btn_str"
                android:gravity="center"
                android:textSize="@dimen/order_payment_btn_text_size"
                android:textColor="@color/color_97c8cd"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_btn_height"/>
        <View
                android:layout_above="@id/btn_payment"
                android:background="@color/color_d1d1d1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_payment_line_height"/>
    </RelativeLayout>
</LinearLayout>