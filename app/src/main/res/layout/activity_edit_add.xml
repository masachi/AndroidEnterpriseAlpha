<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.example.androidenterprise.activity.EditAddActivity">
    <RelativeLayout
            android:id="@+id/edit_add_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:paddingLeft="@dimen/select_add_margin_many"
            android:background="@color/color_97c8cd">
        <ImageButton
                android:id="@+id/edit_add_return_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@mipmap/ic_return"
                android:paddingTop="@dimen/edit_add_margin_left_right"
                android:paddingBottom="@dimen/edit_add_margin_left_right"
                android:paddingRight="@dimen/edit_add_margin_left_right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/edit_add"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/action_bar_text_size"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/edit_add_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_add_rl"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:text="@string/consignee"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/edit_add_consignee_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_add_consignee"
            android:layout_below="@id/edit_add_rl"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/edit_add_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/edit_add_consignee"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <TextView
            android:id="@+id/edit_add_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_add_line1"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_alignRight="@id/edit_add_consignee"
            android:text="@string/phonenum"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/edit_add_phonenum_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_add_phonenum"
            android:layout_below="@id/edit_add_line1"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:inputType="number"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/edit_add_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/edit_add_phonenum"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <TextView
            android:id="@+id/edit_add_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_add_line2"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_alignRight="@id/edit_add_consignee"
            android:text="@string/detailed"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/edit_add_detailed_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_add_detailed"
            android:layout_below="@id/edit_add_line2"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/edit_add_line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/edit_add_detailed"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <RelativeLayout
            android:id="@+id/edit_add_rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:layout_below="@id/edit_add_line3"
            android:layout_marginTop="@dimen/edit_add_line_margin_delete">
        <ImageView
                android:id="@+id/edit_add_delete_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_add_delete"/>
        <TextView
                android:id="@+id/edit_add_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/edit_add_delete_img"
                android:layout_marginLeft="@dimen/edit_add_img_margin_delete"
                android:text="@string/delete"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/edit_add_text_size"/>
    </RelativeLayout>

    <Button
            android:id="@+id/edit_add_conserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_add_rl_delete"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/edit_add_btn_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_btn_margin_left_right"
            android:background="@color/color_97c8cd"
            android:text="@string/conserve"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/edit_add_btn_size"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>