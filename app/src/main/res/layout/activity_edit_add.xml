<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.example.androidenterprise.activity.EditAddActivity">
    <org.example.androidenterprise.view.TopbarView
            android:id="@+id/topbar_edit_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbar_edit_add"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:text="@string/consignee"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/et_consignee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_consignee"
            android:layout_below="@id/topbar_edit_add"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/tv_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/tv_consignee"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line1"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_alignRight="@id/tv_consignee"
            android:text="@string/phonenum"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/et_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_phonenum"
            android:layout_below="@id/tv_line1"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:inputType="number"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/tv_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/tv_phonenum"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <TextView
            android:id="@+id/tv_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line2"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_alignRight="@id/tv_consignee"
            android:text="@string/detailed"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/edit_add_text_size"/>
    <EditText
            android:id="@+id/et_detailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_detailed"
            android:layout_below="@id/tv_line2"
            android:layout_marginLeft="@dimen/edit_add_tv_margin_many"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:paddingTop="@dimen/edit_add_tv_margin_many"
            android:paddingBottom="@dimen/edit_add_tv_margin_many"
            android:background="@drawable/edit_add_et"
            android:hint="@string/click_input"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/edit_add_text_size"/>
    <TextView
            android:id="@+id/tv_line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/tv_detailed"
            android:layout_marginTop="@dimen/edit_add_tv_margin_many"
            android:layout_marginLeft="@dimen/edit_add_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:background="@color/color_d1d1d1"/>

    <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/edit_add_margin_left_right"
            android:layout_below="@id/tv_line3"
            android:layout_marginTop="@dimen/edit_add_line_margin_delete">
        <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_add_delete"/>
        <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_delete"
                android:layout_marginLeft="@dimen/edit_add_img_margin_delete"
                android:text="@string/delete"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/edit_add_text_size"/>
    </RelativeLayout>

    <Button
            android:id="@+id/btn_conserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_delete"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/edit_add_btn_margin_left_right"
            android:layout_marginRight="@dimen/edit_add_btn_margin_left_right"
            android:background="@color/color_97c8cd"
            android:text="@string/conserve"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/edit_add_btn_size"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>