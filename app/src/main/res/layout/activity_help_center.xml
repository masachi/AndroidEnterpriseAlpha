<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.HelpCenterActivity">
    <org.example.androidenterprise.view.TopbarView
            android:id="@+id/topbar_help_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_article_str"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/use_article_text_size"
            android:layout_marginLeft="@dimen/use_article_tv_left_dis"
            android:layout_marginTop="@dimen/use_article_tv_top_dis"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:background="@color/color_d1d1d1"
            android:layout_marginLeft="@dimen/tv_left_dis"
            android:layout_marginTop="@dimen/tv_top_dis"
            android:layout_marginRight="@dimen/tv_right_dis"/>
    <TextView
            android:id="@+id/tv_use_article_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/help_article_context_tv_top_dis"
            android:layout_marginLeft="@dimen/help_article_context_tv_left_dis"
            android:layout_marginRight="@dimen/help_article_context_tv_right_dis"
            android:textSize="@dimen/help_article_context_size"
            android:textColor="@color/color_999999"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:background="@color/color_d1d1d1"
            android:layout_marginTop="@dimen/tv_top_dis"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_str"
            android:textSize="@dimen/about_text_size"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/about_tv_top_dis"
            android:layout_marginLeft="@dimen/about_tv_left_dis"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:background="@color/color_d1d1d1"
            android:layout_marginLeft="@dimen/tv_left_dis"
            android:layout_marginTop="@dimen/tv_top_dis"
            android:layout_marginRight="@dimen/tv_right_dis"/>
    <TextView
            android:id="@+id/tv_about_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_context_tv_top_dis"
            android:layout_marginLeft="@dimen/about_context_tv_left_dis"
            android:layout_marginRight="@dimen/about_context_tv_right_dis"
            android:textSize="@dimen/about_context_size"
            android:textColor="@color/color_999999"/>
</LinearLayout>
