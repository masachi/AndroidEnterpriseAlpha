<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.example.androidenterprise.activity.SelectAddActivity">
    <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:paddingLeft="@dimen/select_add_margin_many"
            android:background="@color/color_97c8cd">
        <ImageButton
                android:id="@+id/ib_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@mipmap/ic_return"
                android:paddingTop="@dimen/select_add_margin_many"
                android:paddingBottom="@dimen/select_add_margin_many"
                android:paddingRight="@dimen/select_add_margin_many"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/select_add"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/action_bar_text_size"/>

    </RelativeLayout>

    <RadioGroup
            android:id="@+id/rg_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_top">
        <!--TODO: select_add_rg_item-->
    </RadioGroup>

    <Button
            android:id="@+id/btn_increase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/select_add_btn_margin_left_right"
            android:layout_marginRight="@dimen/select_add_btn_margin_left_right"
            android:layout_marginBottom="@dimen/select_add_btn_margin_bottom"
            android:background="@color/color_97c8cd"
            android:text="@string/select_add_increase"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/select_add_btn_size"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>