<?xml version="1.0" encoding="utf-8"?>
<!--Created by yangxinghua ：选择地址主页面布局-->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        tools:context="org.example.androidenterprise.activity.SelectAddActivity">
    <org.example.androidenterprise.view.TopbarView
            android:id="@+id/topbar_select_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ListView
            android:id="@+id/lv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbar_select_add"
            android:divider="@color/color_d1d1d1"
            android:dividerHeight="@dimen/storke_all">
    </ListView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/storke_all"
            android:layout_below="@id/lv_address"
            android:background="@color/color_d1d1d1"/>
    <Button
            android:id="@+id/btn_increase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/select_add_btn_margin_left_right"
            android:layout_marginRight="@dimen/select_add_btn_margin_left_right"
            android:layout_marginBottom="@dimen/select_add_btn_margin_bottom"
            android:background="@color/color_97c8cd"
            android:text="@string/select_add_increase"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/select_add_btn_size"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>