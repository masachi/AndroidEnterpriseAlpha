<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/item_img_left"
            android:layout_width="@dimen/music_lv_img_width"
            android:layout_height="@dimen/music_lv_img_height"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/item_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img_left"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="2333333"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/item_music_title_size"/>

    <TextView
            android:id="@+id/item_price_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title_left"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="$233"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/item_music_price_size"/>

    <TextView
            android:id="@+id/item_price_with_line_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_price_left"
            android:layout_marginStart="7dp"
            android:layout_alignBottom="@id/item_price_left"
            android:text="233"
            android:textColor="@color/color_cccccc"
            android:textSize="@dimen/item_music_price_with_line_size"/>




    <ImageView
            android:id="@+id/item_img_right"
            android:layout_width="@dimen/music_lv_img_width"
            android:layout_height="@dimen/music_lv_img_height"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:id="@+id/item_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img_right"
            android:layout_alignStart="@id/item_img_right"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="2333333"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/item_music_title_size"/>

    <TextView
            android:id="@+id/item_price_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title_right"
            android:layout_alignStart="@id/item_title_right"
            android:layout_marginTop="@dimen/item_music_margin_each"
            android:text="$233"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/item_music_price_size"/>

    <TextView
            android:id="@+id/item_price_with_line_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_price_right"
            android:layout_marginStart="7dp"
            android:layout_alignBottom="@id/item_price_right"
            android:text="233"
            android:textColor="@color/color_cccccc"
            android:textSize="@dimen/item_music_price_with_line_size"/>

</RelativeLayout>