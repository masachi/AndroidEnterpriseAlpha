<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/item_setting_height">
    <ImageView
            android:id="@+id/item_setting_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/item_setting_image_start"
            android:layout_centerVertical="true"/>

    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_setting_image"
            android:layout_centerVertical="true">
        <TextView
                android:id="@+id/item_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_setting_image_margin_text"
                android:textSize="@dimen/item_setting_text_size"
                android:text="2333333"/>

        <ImageView
                android:id="@+id/ic_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@mipmap/ic_my_messager_red"
                android:layout_gravity="right"
                android:layout_toEndOf="@+id/frameLayout"
                android:visibility="invisible"/>

    </FrameLayout>

    <ImageView
            android:id="@+id/item_setting_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginEnd="@dimen/item_setting_arrow_padding"/>

</RelativeLayout>