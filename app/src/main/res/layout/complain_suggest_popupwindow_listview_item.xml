<?xml version="1.0" encoding="utf-8"?>
<!--Created by chenguojiao : 投诉建议popupwindow的listview的item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhhh"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/popupwindow_rb_text_size"
            android:layout_marginLeft="@dimen/popupwindow_rb_left_dis"
            android:layout_marginTop="@dimen/popupwindow_rb_top_dis"/>
    <ImageView
            android:id="@+id/iv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_complain_suggest_check_selected"
            android:layout_alignBottom="@+id/tv_item"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/popupwindow_lv_item_iv_right_dis"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/popupwindow_tv_height"
            android:layout_below="@+id/tv_item"
            android:background="@color/color_d1d1d1"
            android:layout_marginTop="@dimen/popupwindow_tv_top_dis"
            android:layout_marginLeft="@dimen/popupwindow_tv_left_dis"
            android:layout_marginRight="@dimen/popupwindow_tv_right_dis"/>


</RelativeLayout>
