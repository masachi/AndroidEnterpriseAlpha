<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ComplainSuggestActivity">
    <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:background="@color/color_97c8cd">
        <ImageButton
                android:id="@+id/ib_reback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_return"
                android:background="@color/transparent"
                android:layout_marginLeft="@dimen/top_ib_left"
                android:paddingRight="@dimen/top_imagebutton_padding_right"
                android:paddingTop="@dimen/top_imagebutton_padding_top"
                android:paddingBottom="@dimen/top_imagebutton_padding_bottom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/complain_suggest_str"
                android:textSize="@dimen/top_text_size"
                android:textColor="@color/color_ffffff"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_choose_kinds"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_suggest_height"
            android:layout_below="@+id/rl_top"
            android:background="@drawable/activity_suggest_complain_et_bg"
            android:layout_marginTop="@dimen/choose_suggest_top_dis"
            android:layout_marginLeft="@dimen/choose_suggest_left_dis"
            android:layout_marginRight="@dimen/choose_suggest_right_dis">
        <TextView
                android:id="@+id/tv_choose_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择意见类型"
                android:textSize="@dimen/choose_suggest_text_size"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/choose_suggest_text_left_dis"/>
        <ImageView
                android:id="@+id/iv_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/choose_suggest_ib_right_dis"
                />
    </RelativeLayout>
    <EditText
            android:id="@+id/et_suggest_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_context_et_height"
            android:layout_below="@+id/rl_choose_kinds"
            android:background="@drawable/activity_suggest_complain_et_bg"
            android:hint="@string/input_context_str"
            android:textSize="@dimen/input_context_hint_text_size"
            android:textColorHint="@color/color_666666"
            android:paddingLeft="@dimen/input_context_hint_left_dis"
            android:gravity="top"
            android:paddingTop="@dimen/input_context_hint_top_dis"
            android:layout_marginLeft="@dimen/input_context_et_left_dis"
            android:layout_marginRight="@dimen/input_context_et_right_dis"
            android:layout_marginTop="@dimen/input_context_et_top_dis"
            />
    <TextView
            android:id="@+id/tv_complain_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complain_telephone_str"
            android:textSize="@dimen/choose_suggest_text_size"
            android:textColor="@color/color_999999"
            android:layout_below="@+id/et_suggest_context"
            android:layout_marginTop="@dimen/complain_telephone_tv_top_dis"
            android:layout_marginLeft="@dimen/complain_telephone_tv_left_dis"/>
    <TextView
            android:id="@+id/tv_complain_telephone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complain_telephone_number_str"
            android:textSize="@dimen/choose_suggest_text_size"
            android:textColor="@color/color_666666"
            android:layout_below="@+id/et_suggest_context"
            android:layout_toRightOf="@+id/tv_complain_telephone"
            android:layout_marginTop="@dimen/complain_telephone_num_tv_top_dis"
            android:layout_marginLeft="@dimen/complain_telephone_num_tv_left_dis"/>
    <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commit_btn_height"
            android:layout_marginLeft="@dimen/commit_btn_left_dis"
            android:layout_marginRight="@dimen/commit_btn_right_dis"
            android:text="@string/commit_str"
            android:textColor="@color/color_97c8cd"
            android:textSize="@dimen/commit_text_size"
            android:background="@drawable/activity_suggest_complain_commit_btn_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/commit_btn_bottom_dis"/>
    
</RelativeLayout>
